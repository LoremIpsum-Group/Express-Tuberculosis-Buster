#:kivy 2.3.0
<HoverLabel@Label+HoverBehavior>
    on_enter: self.color = 0.8, 0.2, 1, 1
    on_leave: self.color = 0, 0, 0, 1

<ViewRecords>:
    name: "main_menu"

    BoxLayout:
        id: "nav_bar"
        orientation: "vertical"
        size_hint_x: 0.25 # This makes the BoxLayout take up 25% of its parent's width
        pos_hint: {"x": 0, "center_y": .60}
        spacing: 70 

        canvas.before:
            Color:
                #rgba: 0.3, 0.4, 0.9, 1  
                rgba: 0, 0, 1, 1  
            Rectangle:
                size: self.size
       # AnchorLayout:
            #anchor_y: 'top'  # This will position the buttons at the top of the BoxLayout
        HoverLabel:
            markup: True
            text: '[b]Scan Image[/b]'
            font_size: 27
            pos_hint: {'x':0.45, "y": 1}     
            color: [1,1,1,1]       
            size_hint: None, None
            on_touch_down: if self.collide_point(*args[1].pos): root.manager.current = 'main_dashb'
           
        HoverLabel:
            markup: True
            text: '[b]View Patient[/b]'
            font_size: 27   
            pos_hint: {'x':0.43, 'y':0.6}
            color: [1,1,1,1]
            size_hint: None, None           
            on_touch_down: if self.collide_point(*args[1].pos): root.manager.current = 'main_dashb'

        HoverLabel:
            markup: True
            text: '[b]Manage \nAccount[/b]'
            font_size: 27   
            pos_hint: {'x':0.5, 'y':0.7}
            color: [1,1,1,1]
            size_hint: None, None
            on_touch_down: if self.collide_point(*args[1].pos): root.manager.current = 'manage_account'
    
    BoxLayout:
        id: main_area
        orientation: 'vertical'
        size_hint_x: 0.75
        pos_hint: {'x':0.25}
        
        BoxLayout:
            id: search_section
            size_hint_y: None
            height: '80dp'
            padding: {'10dp', '20dp'}  # Apply padding only to the top and bottom

            TextInput:
                id: search_input
                hint_text: 'Enter patient id here'
                height: '30dp'  # Set a specific height for the TextInput

            Button:
                id: search_button
                markup: True
                text: "[b]Search[/b]"
                font_size: 15
                height: '30dp'
                background_normal: '' 
                background_color: [0,0,1,1]
                on_press: root.search_button()
        
        
            
        Label:
            id: search_result
            text:'Search Results Area'
            color: [0,0,0,1]


      
      