#:kivy 2.3.0
#:kivy 2.3.0
<ScanResult>:
    name: 'scan_result'
    padding: 10
    spacing : 10
    Image:
        id: res_img
        size_hint: .85, .85
        pos_hint: {'center_x':.38,'center_y':0.5}  
    FloatLayout:
        Label: 
            id: result_class
            text: 'Lorem'
            color: [0,0,0,1]
            font_size: self.width* .020
            pos_hint: {'center_x':0.8,'center_y':0.6}
        Label: 
            id: result_perc
            text: 'Ipsum'
            color: [0,0,0,1]
            font_size: self.width* .020
            pos_hint: {'center_x':0.8,'center_y':0.55}     

    MDRectangleFlatButton:
        text: 'Back'
        pos_hint: {'center_x':0.9,'center_y':0.1}
        on_press: root.manager.current = 'scan_img' 