#:kivy 2.3.0
#:kivy 2.3.0
<PatientResult>:
    percentage: 0 
    percentage_color: (0, 0, 0, 0)
    name: 'patient_result'
    padding: 10
    spacing : 10
    Image:
        id: res_img
        size_hint: .45, .65
        pos_hint: {'center_x': 0.30,'center_y': 0.47}

    FloatLayout:

        canvas.before:
            # Total Percentage
            Color:
                rgba: 0.8, 0.8, 0.8, 1  # Gray color for total length
            RoundedRectangle:
                pos: self.x + self.width * 0.58, self.y + self.height * 0.63
                size: self.parent.width * 0.35, self.parent.height * 0.03
            
            # Actual Percentage
            Color:
                rgba: root.percentage_color
            
            RoundedRectangle:
                pos: self.x + self.width * 0.58, self.y + self.height * 0.63
                size: self.parent.width * 0.35 * (root.percentage / 100), self.parent.height * 0.03 # 75% filled

   
        Label:
            #text: 'Scan Results for Patient: '
            id: patient_id_text
            font_size: 30
            color: [0, 0, 1, 1]
            bold: True
            pos_hint: {'center_x': 0.176, 'center_y': 0.9}

        Label:
            text: 'Original X-Ray, & Grad-Cam Results'
            font_size: 22
            color: [0, 0, 0, 1] 
            pos_hint: {'center_x': 0.166, 'center_y': 0.85}
    

        Label:
            id: result_classnPerc
            text: "TB Positive: 89%"
            bold: True
            color: [0, 0, 0, 1]
            font_size: 30
            pos_hint: {"center_x": 0.64, "center_y": 0.76}  

        Label:
            id: result_rcmdtn
            text: "Confidence Percent Message"
            color: [0, 0, 0, 1]
            font_size: 23
            pos_hint: {"center_x": 0.66, "center_y": 0.70}  
         

        BoxLayout: 
            orientation: 'horizontal'
            size_hint: 0.10, 0.10
            pos_hint: {'center_x': 0.89, 'center_y': 0.70}

            CheckBox:
                id: misclassified
                color: 0, 0, 0, 1
                size_hint_x: None
                width: '45dp' 

            Label:
                text: 'Misclassified'
                font_size: 20
                color: 0, 0, 1, 1
                size_hint_x: None

        TextInput:
            id: notes
            multiline: True
            size_hint: .35, .35
            pos_hint: {'center_x': 0.755, 'center_y': 0.43}

        
        BoxLayout:
            orientation: 'horizontal'
            spacing: 20
            size_hint: 0.20, 0.20
            pos_hint: {'center_x': 0.285, 'center_y': 0.15}

            MDRectangleFlatButton:
                id: x_ray
                text: '[b]X-ray[/b]'
                font_size: 22
                on_press: root.change_img(self)
            
            MDRectangleFlatButton:
                id: pre_proc
                text: '[b]Isolated Lung[/b]'
                font_size: 22
                on_press: root.change_img(self)
            
            MDRectangleFlatButton:
                id: grad_cam
                text: '[b]Heatmap[/b]'
                font_size: 22
                on_press: root.change_img(self)
        
        MDRectangleFlatButton:
            text: '[b]Back[/b]'
            pos_hint: {'center_x':0.95,'center_y':0.95}
            font_size: 22
            on_press: root.back_button()
            line_color: 1, 0, 0, 1
            md_bg_color: 1, 0, 0, 1
            text_color: 1, 1, 1, 1
        

        BoxLayout:
            spacing: 20
            orientation: 'horizontal'
            size_hint: 0.2 , 0.2 
            pos_hint: {'center_x': 0.75, 'center_y': 0.27} 
            MDRectangleFlatButton:
                text: '[b]Full View Image[/b]'
                size_hint_x: 0.06   
                font_size: 22 
                on_press: root.full_view()
        