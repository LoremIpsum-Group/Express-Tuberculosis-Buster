#:kivy 2.3.0 

<ResultsTest>:
    name: 'results_test'
    FloatLayout:
        name: 'ResultsTest'
        percentage: 0.34
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Image:
                id: orig_image
                source: '' 
                size_hint: 0.4, 0.4
            
            
            Image:
                id: preproc_image
                source: '' 
                size_hint: 0.4, 0.4
            
            Image:
                id: gradcam_image
                source: '' 
                size_hint: 0.4, 0.4

        BoxLayout:
            orientation: 'horizontal'
            
            TextInput:
                id: result_id
                hint_text: 'Search Result ID'
                size_hint_y: 0.1
            
                multiline: False
        
            Button:
                size_hint_y: 0.1
                text: "Search"
                on_press: root.search_result()
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 0.5, 0.1
                pos_hint: {'center_x': 0.8, 'center_y': 0.8}
                TextInput:
                    id: test_text 
                    multiline: True

                
                Button:
                    text: 'Display'
                    on_press: print(root.ids.error_flag.active)
            
            BoxLayout: 
                orientation: 'horizontal'
                size_hint: 0.4, 0.1
                post_hint: {'center_x': 0.5, 'center_y': 0.5}
                spacing: 10
                Label:
                    text: 'Misclassified'
                    color: 0, 0, 1, 1
                CheckBox:
                    id: error_flag
                    color: 0, 0, 0, 1
        

       