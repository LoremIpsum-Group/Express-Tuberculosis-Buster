#:kivy 2.3.0 

<ResultsTest>:
    name: 'results_test'
    FloatLayout:
        name: 'ResultsTest'
        percentage: 0.34
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
      
        Label:
            id: header
            text: 'Patient Information'
            color: (0, 0, 1, 1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.80}
        BoxLayout:
            size_hint_x: 0.4
            size_hint_y: None
            height: 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.75}
            canvas:
                Color:
                    rgba: 0, 0, 1, 1  
                Line:
                    points: [self.x, self.y, self.right, self.y]

        BoxLayout:
            id: patient_search_result
            orientation: 'vertical'
            size_hint: 0.4, 0.4 
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            canvas.before:
                Color:
                    rgba: (250/255, 250/255, 254/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20, ]

           
            
        BoxLayout:
            orientation: "horizontal" 
            size_hint: 0.2, 0.1 

            Button:
                text: "Exists"
                on_press: root.exists() 
            
            Button
                text: "Does not Exist"
                on_press: root.not_exists()
            
            Button
                text: "Clear Widget"
                on_press: root.ids.patient_search_result.clear_widgets()
            
        

    