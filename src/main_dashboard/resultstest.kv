#:kivy 2.3.0 

<ResultsTest>:
    name: 'results_test'
    FloatLayout:
        name: 'ResultsTest'
        percentage: 0.34
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Image:
                id: orig_image
                source: '' 
                size_hint: 0.4, 0.4
            
            
            Image:
                id: preproc_image
                source: '' 
                size_hint: 0.4, 0.4
            
            Image:
                id: gradcam_image
                source: '' 
                size_hint: 0.4, 0.4

        BoxLayout:
            orientation: 'horizontal'
            
            TextInput:
                id: result_id
                hint_text: 'Search Result ID'
                size_hint_y: 0.1
            
                multiline: False
        
            Button:
                size_hint_y: 0.1
                text: "Search"
                on_press: root.search_result()
        

       