#:kivy 1.2.0

WindowManager:
    ScreenOne:
    ScreenTwo:

<ScreenOne>:
    name: "screen_one"
  
    FloatLayout: 
        spacing: 10
        padding: 10
        Label:
            text: "[b][i]ETBx[/i][/b]"
            pos_hint: {"center_x": 0.5, "center_y": 0.9}
            color: 0, 0, 1, 1
            font_size: 60
            markup: True
        
        Label:
            text: "Enter the email address associated\nwith your account to reset password"
            pos_hint: {"center_x": 0.5, "center_y": 0.68}
            color: 0.60, 0.60, 0.60, 1
            bold: True
            markup: True
        
        MDTextField:
            hint_text: "Email"
            icon_left: "email"
            size_hint_x: 0.3
            mode: "rectangle"
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
        
        Button:
            text: "Back"
            pos_hint: {"center_x": 0.37, "center_y": 0.3}
            size_hint: 0.2, 0.1
            background_color: 0, 0, 1, 1
            
        Button:
            text: "Continue"
            pos_hint: {"center_x": 0.63, "center_y": 0.3}
            size_hint: 0.2, 0.1
            background_color: 0, 0, 1, 1
            on_release:
                app.root.current = "screen_two"
                root.manager.transition.direction = "left"
                

<ScreenTwo>: 
    name: "screen_two"

    FloatLayout: 
        spacing: 10
        padding: 10

        Label:
            text: "[b][i]ETBx[/i][/b]"
            pos_hint: {"center_x": 0.5, "center_y": 0.9}
            color: 0, 0, 1, 1
            font_size: 60
            markup: True
        
        MDTextField:
            hint_text: "New Password"
            icon_left: "lock"
            size_hint_x: 0.3
            mode: "rectangle"
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
        

        MDTextField:
            hint_text: "Confirm Password"
            icon_left: "lock"
            size_hint_x: 0.3
            mode: "rectangle"
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
        
        Button:
            text: "Back"
            pos_hint: {"center_x": 0.37, "center_y": 0.3}
            size_hint: 0.2, 0.1
            background_color: 0, 0, 1, 1
            on_press:
                app.root.current = "screen_one"
                root.manager.transition.direction = "right"

        Button:
            text: "Confirm"
            size_hint: 0.2, 0.1
            background_color: 0, 0, 1, 1
            pos_hint: {"center_x": 0.63, "center_y": 0.3}
