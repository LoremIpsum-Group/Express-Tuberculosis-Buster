#:kivy 1.2.0

<SignupTextField@MDTextField>:
    multiline: False
    size_hint_x : 0.8
    pos_hint: {'center_x' : 0.5, 'center_y' : 0.4}
    mode: "rectangle"

<SignupScreen>:

    BoxLayout:
        orientation: "horizontal"
        FloatLayout:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "assets/x-ray.jpg"
            Label:
                text: "[b]Welcome \nto [i][color=#0000ff]ETBx[/i][/b]"
                font_size: 70
                color: 1, 1, 1, 1
                bold: True
                markup: True

        BoxLayout:
            orientation: "vertical"
            spacing: 20
            padding: 20
            Label:
                text: "Sign Up for an Account"
                font_size: 25
                color : 0, 0, 0, 1
                

            SignupTextField:
                id: full_name_input
                hint_text: "Full Name"
                icon_left: "account"
            
            SignupTextField:
                id: email_input
                hint_text: "Email"
                icon_left: "email"
            
            SignupTextField:
                id: password_input
                hint_text: "Password"
                icon_left: "lock"
                password: True
            
            SignupTextField:
                id: confirm_password
                hint_text: "Confirm Password"
                icon_left: "lock"
                password: True
            
            Button:
                id: signup_button
                text: "Sign Up"
                background_color: 0, 0, 1, 1
                size_hint: 0.8, 0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.1}
                on_press: root.signup_button()

            Label
                id: login_label
                text: "Already have an account? [ref=login][color=0000FF]Login[/color][/ref]"
                color: 0, 0, 0, 1
                markup: True
                on_ref_press: 
                    app.root.current = 'login'
                    app.root.get_screen('signup').ids.email_input.text = ''
                    app.root.get_screen('signup').ids.password_input.text = ''
                    app.root.get_screen('signup').ids.confirm_password.text = ''
                    app.root.get_screen('signup').ids.full_name_input.text = ''

                    #app.root.get_screen('signup').ids.email_input.text = ''
